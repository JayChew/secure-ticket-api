{
  // =====================
  // Top Level
  // =====================
  "include": [
    "src/**/*",
  ],
  // =====================
  // compilerOptions
  // =====================
  "compilerOptions": {
    // ---------------------
    // Language and Environment
    // ---------------------
    "lib": [
      "esnext"
    ],
    "target": "ES2023",
    // ---------------------
    // Modules
    // ---------------------
    "baseUrl": "src",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "resolveJsonModule": true,
    "rootDir": "src",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    // ---------------------
    // Emit
    // ---------------------
    "outDir": "dist",
    //"sourceMap": true,
    // ---------------------
    // Type Checking
    // ---------------------
    // "noImplicitAny": true,
    "strict": true,
    // ---------------------
    // Interop Constraints
    // ---------------------
    // "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    // ---------------------
    // Completeness
    // ---------------------
    // "skipLibCheck": true
  }
}